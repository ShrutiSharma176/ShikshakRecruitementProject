<%- include('./adminHeader.ejs') %>
<br><br>
<center>
    <h2 style="background-color: lightgrey;font-weight: bolder;width: 90%;">Candidate List</h2>
    <br>
    <table width="90%" style="border:2px solid black" align="center" cellspacing="4" cellpadding="6">
        <tr style="background-color: black;color: white;text-align: center;">
            <td>Name</td>
            <td>Email</td>
            <td>Gender</td>
            <td>Date</td>
            <td>Address</td>
            <td>Mobile</td>
            <td>Qualification</td>
            <td>Experience</td>
            <td>Percentage</td>
            <td>Resume</td>
            <td>Email-Verify</td>
            <td>Admin-Verify</td>
            <td>Status</td> 
        </tr>
        <% obj.forEach((list)=>{ %>
        <tr style="background-color: whitesmoke;text-align: center;">
            <td><%= list.firstname %> <%= list.lastname %></td>
            <td><%= list._id %></td>
            <td><%= list.gender %></td>
            <td><%= list.date %></td>
            <td><%= list.address %></td>
            <td><%= list.mobile %></td>
            <td><%= list.qualification %></td>
            <td><%= list.experience %></td>
            <td><%= list.percentage %></td>
            <td><%= list.file %></td>
            <td><%= list.emailverify %></td>
            <td><a href="/admin/adminVerifyCandidate?email=<%= list._id %>&adminEmail=<%= email %>"><%= list.adminverify %></a></td>
            <td><%= list.status %></td>
        </tr>
        <% }) %>
    </table><br>
    <div><h5 style="text-decoration: underline;"><a href="/admin/adminViewAppliedCandidateList">For Applied Candidate List Click Here</a></h5></div>
    
</center>
<%- include('./adminFooter.ejs') %>